{
  "name": "JIFBOX",
  "description": "A GIF photobooth. Pronounced GIF-box.",
  "repository": "https://github.com/sunlightlabs/jifbox",
  "logo": "http://assets.sunlightfoundation.com.s3.amazonaws.com/projects/jifbox/logo.svg",
  "keywords": ["python", "flask", "gif"],
  "env": {
    "SECRET_KEY": {
      "description": "A secret key for instance security",
      "generator": "secret"
    },
    "ADMIN_PASSWORD": {
      "description": "The admin login password, MAKE IT GOOD!"
    },
    "BASIC_PASSWORD": {
      "description": "HIGHLY RECOMMENDED If set, password required to use JIFBOX, must be different from ADMIN_PASSWORD",
      "required": false
    },
    "DROPBOX_KEY": {
      "description": "Dropbox OAuth app key",
      "required": false
    },
    "DROPBOX_SECRET": {
      "description": "Dropbox OAuth app secret",
      "required": false
    },
    "TUMBLR_KEY": {
      "description": "Tumblr OAuth consumer key",
      "required": false
    },
    "TUMBLR_SECRET": {
      "description": "Tumblr OAuth consumer secret",
      "required": false
    },
    "TUMBLR_HOSTNAME": {
      "description": "Full hostname for Tumblr blog, example: thisismyblog.tumblr.com",
      "required": false
    }
  },
  "addons": [
    "mongohq:ssd_1g_elastic"
  ]
}